{
    "name": "powdr-vscode",
    "displayName": "Powdr Language Support",
    "description": "Cliente LSP para Powdr",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:powdr",
        "onLanguage:powdr-asm"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "powdr",
                "extensions": [
                    ".pil"
                ],
                "aliases": [
                    "Powdr"
                ]
            },
            {
                "id": "powdr-asm",
                "extensions": [
                    ".asm"
                ],
                "aliases": [
                    "Powdr Assembly"
                ]
            }
        ],
        "grammars": [
            {
                "language": "powdr",
                "scopeName": "source.powdr",
                "path": "./syntaxes/powdr.tmLanguage.json"
            },
            {
                "language": "powdr-asm",
                "scopeName": "source.powdr",
                "path": "./syntaxes/powdr.tmLanguage.json"
            }
        ]
    },
    "configuration": {
        "type": "object",
        "title": "Powdr",
        "properties": {
            "powdr.trace.server": {
                "type": "string",
                "enum": [
                    "off",
                    "messages",
                    "verbose"
                ],
                "default": "off",
                "description": "Traces the communication between VS Code and the Powdr language server."
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "^14.x.x",
        "@types/vscode": "^1.x.x",
        "@vscode/vsce": "^3.2.1",
        "typescript": "^4.x.x"
    }
}
